<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="styles/reset.css" rel='stylesheet'>
    <link href="styles/base.css" rel='stylesheet'>
    <link href="styles/layout.css" rel='stylesheet'>

    <title>Book Collection</title>
  </head>
  <body>
    <nav>
      <p>Best Books!</p>
      <p>Search Results</p>
    </nav>
    <main>
        <ul>
          <% bananas.forEach(book => { %>
            <li><%= book.title %></li>
            <li>ISBN 10 Code: <%= book.ISBN_10 %></li>
            <li>ISBN 13 Code: <%= book.ISBN_13 %></li>
            <p>Author: <%= book.author %></p>
            <img src="<%= book.image %>" />
            <p>Description: <%= book.description %></p>
            <li>Categories: <%= book.categories %></li>
            <br>

            <li>
              <form method="POST">
                <fieldset>
                  <input type="text" name="title" value="<%= book.title %>">
                  <input type="text" name="author" value="<%= book.author %>">
                  <input type="text" name="description" value="<%= book.description %>">
                  <input type="text" name="categories" value="<%= book.categories %>">
                  <input type="text" name="ISBN_10" value="<%= book.ISBN_10 %>">
                  <input type="text" name="ISBN_13" value="<%= book.ISBN_13 %>">
                  <button type='submit'>Details</button>
                </fieldset>
              </form>
            </li>

            <% }); %>
          </li>
        </ul>
    </main>
  </body>
</html>