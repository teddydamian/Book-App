// this is a partial to render the api results

<% bookObj.forEach( book => {  %>
    <li data-id="">
      <form method="POST" action="/detail">
        <fieldset>
          <img src="<%= book.image %>">
          <label>Title</label>
          <input class='title' type="text" name="title" value="<%= book.title %>">
          <br>
          <label>Author</label>
          <input class='author' type="text" name="author" value="<%= book.author %>">
          <br>
          <label>Description</label>
          <input class='description' type="text" name="book_description" value="<%= book.book_description %>">
          <br>
          <label>Categories</label>
          <input class='categories' type="text" name="categories" value="<%= book.categories %>">
          <br>
          <label>ISBN 10</label>
          <input class='ISBN' type="text" name="ISBN_10" value="<%= book.ISBN_10 %>">
          <br>
          <label>ISBN 13</label>
          <input class='ISBN' type="text" name="ISBN_13" value="<%= book.ISBN_13 %>">
          <button type='submit'>Details</button>
        </fieldset>
      </form>
    </li>
<% }); %>

